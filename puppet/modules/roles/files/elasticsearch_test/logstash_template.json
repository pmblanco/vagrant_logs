{
    "template": "logstash-*",
    "settings" : {
        "number_of_shards" : 6,
        "number_of_replicas" : 0
    },
    "mappings": {
        "_default_": { 
            "dynamic_templates": [
                {
                    "string_template" : { 
                        "match" : "*",
                        "mapping": { "type": "string", "index": "not_analyzed", "store" : true },
                        "match_mapping_type" : "string"
                     } 
                 }
             ],
             "_source" : { "enabled" : false },
             "properties" : {
                "message" : { "type" : "string", "index" : "analyzed" },
                "tags": { "type": "string", "index" : "not_analyzed", "store" : true  }, 
                "type" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "agent" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "auth" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "bytes" : { "type" : "integer", "store" : true },
                "clientip" : { "type" : "ip", "index" : "not_analyzed", "store" : true },
                "host" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "httpversion" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "ident" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "type" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "referrer" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "request" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "response" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "type" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "timestamp" : { "type" : "string", "index" : "not_analyzed", "store" : true },
                "verb" : { "type" : "string", "index" : "not_analyzed", "store" : true }
            }
        }
    }
}
